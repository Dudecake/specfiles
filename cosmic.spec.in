%define githash ${githash}
%define shorthash ${shorthash}
%define reponame ${reponame}
%define pkgname ${pkgname}

Name:           %{pkgname}
Version:        0.1.0
Release:        1.git%{shorthash}%{?dist}
Summary:        ${summary}

License:        GPL-3.0
URL:            https://github.com/pop-os/%{reponame}

Source0:         %{reponame}.tar.gz
Source1:         vendor.tar

# For now, we require all deps for all of cosmic-epoch
BuildRequires:  make
BuildRequires:  which
BuildRequires:  git-core
BuildRequires:  just
BuildRequires:  rust
BuildRequires:  lld
BuildRequires:  cargo
BuildRequires:  glib2-devel
BuildRequires:  gtk3-devel
BuildRequires:  dbus-1-devel
BuildRequires:  wayland-devel
BuildRequires:  clang-devel
BuildRequires:  libxkbcommon-devel
BuildRequires:  libgbm-devel
BuildRequires:  libappstream-glib8
BuildRequires:  pipewire-devel
BuildRequires:  libglvnd-devel
BuildRequires:  seatd-devel
BuildRequires:  libinput-devel
BuildRequires:  pam-devel
BuildRequires:  flatpak-devel

# For now, we require all deps for all of cosmic-epoch
Requires:       libseat1
Requires:       pop-icon-theme
Requires:       greetd
Requires:       cage
# Requires:       mozilla-fira-mono-fonts
# Requires:       mozilla-fira-sans-fonts

%description
%{summary}

%prep
%autosetup -n %{reponame}-%{githash} -p1
mv %{_sourcedir}/vendor.tar vendor.tar
mkdir -p .cargo
cp .vendor/config.toml .cargo/config.toml

%build
just build-vendored

%install
just rootdir=%{buildroot} prefix=%{_prefix} install

%files
${files}
